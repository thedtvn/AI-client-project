<textarea id="input" autocomplete="off"></textarea>
<script>
    function resize_textarea() {
        this.style.height = "auto";
        let rows = this.value.split("\n").length;
        if (rows == 1) {
            this.removeAttribute("style");
            chat_box.removeAttribute("style");
            return;
        }
        const maxHeight = (this.scrollHeight / rows) * 10;
        if (this.scrollHeight > maxHeight) {
            this.style.height = maxHeight + "px";
        } else {
            this.style.height = this.scrollHeight + "px";
        }
        chat_box.setAttribute("style", `height: calc(90% - (${input_root.offsetHeight}px + 20px));`);
    }
    let input = document.getElementById("input");
    input.addEventListener("input", resize_textarea);
</script>
<style>
    #input {
        width: 100%;
        resize: none;
        padding: 5px;
        font-size: 16px;
        margin: 10px;
        margin-left: 0px;
        min-height: 35px;
        border: none;
        border-radius: 5px;
        background-color: #5a5a5a90;
    }
</style>
